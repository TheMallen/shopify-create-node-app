{
  "compilerOptions": {
    "outDir": "./",
    "baseUrl": "./src",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "declaration": true,
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
